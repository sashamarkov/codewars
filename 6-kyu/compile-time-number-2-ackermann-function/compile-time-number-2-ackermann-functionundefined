template <size_t m, size_t n>
struct ackermann {
    static constexpr size_t value = ackermann<m - 1, ackermann<m, n - 1>::value>::value;
};
template <>
struct ackermann<0, 0> {
    static constexpr size_t value = 1;
};
template <size_t n>
struct ackermann<0, n> {
    static constexpr size_t value = n + 1;
};
template <size_t m>
struct ackermann<m, 0> {
    static constexpr size_t value = ackermann<m - 1, 1>::value;
};